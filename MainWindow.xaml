<Window x:Class="WPF_Rassokhin_YP_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Rassokhin_YP_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="AntiqueWhite">
    <Grid>
        <Border Background="Gray" Margin="0,0,0,359">
            <Label HorizontalAlignment="Center" FontSize="40" Content="Auth"/>
        </Border>
        <PasswordBox x:Name = "pwBox" Height = "35" Width = "200" 
         MaxLength = "8" Margin = "296,167,296,217" />
        <Label Content = "Пароль" HorizontalAlignment = "Left" Margin = "204,167,0,0"  
         VerticalAlignment = "Top" Width = "70" />
        <Button Content = "Войти" HorizontalAlignment = "Left" Margin = "421,223,0,0" 
         VerticalAlignment = "Top" Width = "75" Click = "Button_Click"/>
        <Label Content = "Логин" HorizontalAlignment = "Left" Margin = "204,114,0,0"  
            VerticalAlignment = "Top" Width = "70" />
        <PasswordBox  x:Name = "logBox" Height = "35" Width = "200" 
            MaxLength = "8" Margin = "296,105,296,279" />
        <CheckBox x:Name = "logCheck"  Height = "35" Margin="296,223,376,161" Content="Запомнить логин" Checked="logCheck_Checked"/>
    </Grid>
</Window>
